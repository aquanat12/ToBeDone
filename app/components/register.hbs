<form {{on "submit" this.onSubmit}}>
        <div class="form-group">
          <label for="name">
            Your Name
          </label>
            <Input @value={{this.Name}} @type="text" class="form-control" placeholder="Enter your name" />
          <small id="emailHelp" class="form-text text-muted">so we know what to call you</small>
        </div>
        <div class="form-group">
          <label for="username">
            Email Address
          </label>
          <Input @value={{this.Username}} @type="email" class="form-control" placeholder="Enter email" />
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="password">
            Your Password
          </label>
          <Input @value={{this.Password}} id="Password" @type="password" class="form-control"  placeholder="Password" />
          <small id="passwordHelp" class="form-text text-muted">Never never share your password with anyone else.</small>
        </div>
         <div class="form-group">
          <label for="Confirm password">
            Confirm Password
          </label>
          <Input @value={{this.ConfirmPassword}} id="ConfirmPassword" @type="password" class="form-control"  placeholder="Password"/>
          <small id="confirmpasswordHelp" class="form-text text-muted">This has to be the same as above</small>
        </div>
        <button type="submit" disabled={{this.disableSubmit}} class="btn btn-primary">Register</button>
        {{#if this.NamedisableSubmit}}
            <span>Please fill in all Details and ensure password matches</span>
        {{/if}}
        {{#if this.PassworddisableSubmit}}
            <span>Password does not match</span>
        {{/if}}
        <p>
        <LinkTo @route="index" class="btn btn-primary">Back to home</LinkTo>
        </p>
      </form>
